@model IEnumerable<DoAnCnpm.Models.ViewModel>

@{
    ViewBag.Title = "ITestGD";
    Layout = "~/Views/Shared/Trangchu.cshtml";
}
<link href="~/Content/showsp.css" rel="stylesheet" />
<style>
    .center-details {
        display: inline-block;
        text-align: center;
        width: 100%;
        color: white;
        font-weight: bold;
        padding: 0.5rem;
    }
</style>
<div id="div-ds"><h2 style="padding-top:10px;color:black"> <b>Danh sách dành cho bạn</b></h2></div>
<div id="div-ds-2"><h2 style="color:black"></h2></div>
<div class="container">
    <div class="row">
        @foreach (var pro in Model)
        {
            <div class="col-sm-12 col-sm-6 col-md-4 col-lg-3" style="margin-top:15px;">
                <div id="khungsp" style="border:1px solid gainsboro;width:250px;height:350px;padding:0.5rem;margin-bottom:20px">
                    <div class="card-pro">
                        <img src="@Url.Content(pro.ImgPro)" height="220" width="237" />
                        <p style="margin-top:10px ; text-align:center"><b>@Html.DisplayFor(model => pro.NamePro) | @Html.DisplayFor(model => pro.pricePro) Ngàn</b></p>
                        <div id="khungtt">
                            @Html.ActionLink("CHI TIẾT", "Details", new { id = pro.IDPro }, new { @class = "center-details" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

